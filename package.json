{
  "name": "action-npm-goggles",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action giving insights into your npm package",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt --minify",
    "test": "jest",
    "prepare": "npm run build && npm run package",
    "preversion": "npm run prepare && git add ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hertzg/action-npm-goggles.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.30",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/parser": "^4.15.1",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.20.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  }
}
